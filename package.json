{
  "name": "add-auth",
  "version": "1.0.0",
  "description": "Authentication system with Node.js, TypeScript, and PostgreSQL",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "examples",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/components/react/index.d.ts",
      "require": "./dist/components/react/index.js",
      "default": "./dist/components/react/index.js"
    },
    "./vanilla": {
      "types": "./dist/components/vanilla/index.d.ts",
      "require": "./dist/components/vanilla/index.js",
      "default": "./dist/components/vanilla/index.js"
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "rm -rf dist && (./node_modules/.bin/tsc -p tsconfig.build.json || npx -p typescript tsc -p tsconfig.build.json)",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "start": "node dist/index.js",
    "migrate": "ts-node src/database/migrate.ts",
    "migrate:rollback": "ts-node src/database/rollback.ts",
    "test": "jest --runInBand",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "authentication",
    "nodejs",
    "typescript",
    "postgresql"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.1.2",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/bcrypt": "^5.0.2",
    "@types/connect-redis": "^0.0.23",
    "@types/cookie-parser": "^1.4.9",
    "@types/express-session": "^1.18.2",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.30",
    "@types/passport": "^1.0.17",
    "@types/passport-github2": "^1.2.9",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/pg": "^8.11.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.4.3"
  },
  "dependencies": {
    "@types/cors": "^2.8.19",
    "@types/nodemailer": "^6.4.17",
    "bcrypt": "^5.1.1",
    "connect-redis": "^9.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csrf": "^3.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.4",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.11.3",
    "rate-limit-redis": "^4.2.1",
    "redis": "^5.5.6",
    "uuid": "^11.1.0",
    "winston": "^3.12.0",
    "xss": "^1.0.15",
    "zod": "^3.22.4"
  }
}
