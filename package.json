{
  "name": "@paulweezydesign/add-auth",
  "version": "1.0.0",
  "description": "Comprehensive authentication and authorization library with RBAC, OAuth, sessions, and security middleware for Node.js applications",
  "main": "dist/lib.js",
  "types": "dist/lib.d.ts",
  "scripts": {
    "build": "tsc",
    "build:clean": "rm -rf dist && npm run build",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "migrate": "ts-node src/database/migrate.ts",
    "migrate:rollback": "ts-node src/database/rollback.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prepublishOnly": "npm run build:clean"
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "authentication",
    "authorization",
    "rbac",
    "role-based-access-control",
    "oauth",
    "session-management",
    "security",
    "middleware",
    "express",
    "nodejs",
    "typescript",
    "postgresql",
    "redis",
    "jwt",
    "password-reset",
    "csrf-protection",
    "xss-protection",
    "sql-injection-prevention",
    "rate-limiting",
    "input-validation"
  ],
  "author": "paulweezydesign",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/paulweezydesign/add-auth.git"
  },
  "bugs": {
    "url": "https://github.com/paulweezydesign/add-auth/issues"
  },
  "homepage": "https://github.com/paulweezydesign/add-auth#readme",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/connect-redis": "^0.0.23",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.2",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.30",
    "@types/nodemailer": "^6.4.17",
    "@types/passport": "^1.0.17",
    "@types/passport-github2": "^1.2.9",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/pg": "^8.11.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.3"
  },
  "peerDependencies": {
    "express": "^4.18.0",
    "pg": "^8.11.0",
    "redis": "^4.0.0 || ^5.0.0"
  },
  "peerDependenciesMeta": {
    "redis": {
      "optional": true
    }
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "connect-redis": "^9.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csrf": "^3.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.4",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.11.3",
    "rate-limit-redis": "^4.2.1",
    "redis": "^5.5.6",
    "uuid": "^11.1.0",
    "winston": "^3.12.0",
    "xss": "^1.0.15",
    "zod": "^3.22.4"
  }
}
